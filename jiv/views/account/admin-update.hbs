<div id="main-content" class="container maincontent-container">
  {{>message}}
    
<div class="container">
<div class="row">
  <h1>Account for {{firstName}} {{lastName}}</h1>
</div>
<div class="row">
  <form id="user-update-form" class="form-horizontal check-dirty" method="post" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
      <label class="col-sm-2 control-label">First Name</label>

      <div class="col-sm-10">
        <input class="form-control" type="text" name="firstName" id="firstname" value="{{firstName}}"/>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Last Name</label>

      <div class="col-sm-10">
        <input class="form-control" type="text" name="lastName" id="firstname" value="{{lastName}}"/>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Phone Number</label>

      <div class="col-sm-10">
        <input class="form-control" type="text" name="phoneNumber" id="phonenumber" value="{{phoneNumber}}"/>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Email</label>

      <div class="col-sm-10">
        <input class="form-control" type="text" name="email" id="user-email" value="{{email}}"/>
      </div>
    </div>
    {{#if organizations}}
      <div class="form-group">
        <label class="col-sm-2 control-label">Organizations</label>

        <div class="col-sm-10">
          <select class="form-control" name="orgRef" id="organization">
            <option value="">-</option>
            {{#each organizations}}
              <option value="{{id}}"
                      {{#equalsTo _id ../orgRef}}selected{{/equalsTo}}>{{orgName}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    {{/if}}
    <div class="form-group">
      <label class="col-sm-2 control-label">Roles</label>

      <div class="col-sm-10">
        <div class="checkbox">
          <label>
            <input type="checkbox" name="admin" {{#ifIn 'admin' roles}}checked{{/ifIn}}> Admin
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="user" {{#ifIn 'user' roles}}checked{{/ifIn}}> User
          </label>
        </div>

        <div class="checkbox">
          <label>
            <input type="checkbox" name="orgManager" {{#ifIn 'organizationManager' roles}}checked{{/ifIn}}> Organization
            Manager
          </label>
        </div>
      </div>
    </div>

    <h4>Update Password</h4>

    <div class="form-group">
      <label class="col-sm-2 control-label">Password</label>

      <div class="col-sm-10">
        <input class="form-control" type="password" name="password" id="user-password"/>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Confirm Password</label>

      <div class="col-sm-10">
        <input class="form-control" type="password" name="confPassword" id="user-confpassword"/>
      </div>
    </div>
    <div class="col-sm-2 hidden-xs"></div>
      <div class="col-sm-10">
          <input class="btn btn-primary" type="submit" style="margin-left: -10px;"/>
          <a class="btn btn-default" href="/admin/users">Cancel</a>
      </div>


  </form>
</div>
</div>
</div>