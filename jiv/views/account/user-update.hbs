<div id="main-content" class="container maincontent-container">
  <h1 class="text-capitalize indent"><span class="hidden-xs">My Profile:</span> {{username}}</h1>

  <form id="user-update-form" class="form-horizontal form-padding indent check-dirty" method="post"
        enctype="application/x-www-form-urlencoded">


    <div class="form-group">
      <label class="col-sm-2 control-label">First Name</label>

      <div class="col-sm-10">
        <input class="form-control" type="text" name="firstName" id="firstname" value="{{firstName}}"/>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Last Name</label>

      <div class="col-sm-10">
        <input class="form-control" type="text" name="lastName" id="firstname" value="{{lastName}}"/>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Phone Number</label>

      <div class="col-sm-10">
        <input class="form-control" type="text" name="phoneNumber" id="phonenumber" value="{{phoneNumber}}"/>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Email</label>

      <div class="col-sm-10">
        <input class="form-control" type="text" name="email" id="user-email" value="{{email}}"/>
      </div>
    </div>

    <div class="col-sm-2"></div>
    <div class="col-lg-1" style="margin-left:-10px;">
      <input class="btn btn-primary long-btn btn-inline" type="submit"/>
    </div>
  </form>

    <div class="col-lg-4" style="margin-left:5px;">
  <form class="btn-inline">
    <input class="btn btn-warning" type="button" value="Reset Password"
           onclick="window.location.href='/profile/{{username}}/resetpass'"/>
  </form>
  <form class="btn-inline">
    <input class="btn btn-default" type="button" value="Cancel" onclick="window.location.href='/'"/>
  </form>
    </div>
</div>

