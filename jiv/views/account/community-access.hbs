<!-- Modal for Add Member -->
<div id="addMember" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2 class="modal-title">Add a Member</h2>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <div class="form-group col-md-12">
              <label for="orgName">Organization Name<span class="orange">*</span></label>
              <input class="form-control" id="orgName" placeholder="Organization Name" value="">
              <div class="error-message orange hidden">This field is required.</div>
            </div>
            <div class="form-group col-md-12">
              <label for="orgRole">Role in the community<span class="orange">*</span></label>
              <div class="radio">
                <label>
                  <input type="radio" name="role" id="provider" value="Provider">
                  Provider
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="role" id="explorer" value="Explorer">
                  Explorer
                </label>
              </div>
              <div class="error-message orange hidden">This field is required.</div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer actions">
        <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-floppy-o"></i> Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal for Update Member -->
<div id="updateMember" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2 class="modal-title">Update Member Role</h2>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <div class="form-group col-md-12">
              <label for="orgName">Organization Name</label>
              <input class="form-control" id="orgName" placeholder="Organization Name" value="Organization Name" disabled>
              <div class="error-message orange hidden">This field is required.</div>
            </div>
            <div class="form-group col-md-12">
              <label for="orgRole">Role in the community</label>
              <div class="radio">
                <label>
                  <input type="radio" name="role" id="provider" value="Provider" checked>
                  Provider
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="role" id="explorer" value="Explorer">
                  Explorer
                </label>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer actions">
        <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-floppy-o"></i> Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal for Delete Member -->
<div id="deleteMember" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header text-center">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h1><span class="icon icon-warning-o"></span></h1>
        <h3>Are you sure you want to delete this organization from your members list?</h3>
        <h3>They will be removed from your community.</h3>
      </div>
      <div class="modal-body text-center hidden">
      </div>
      <div class="modal-footer actions">
        <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-trash"></i> Delete</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

