<div id="main-content" class="container maincontent-container">
<form id="user-id" class="form-horizontal" style="margin-top: 25px;" method="post">
    <h1 class="text-capitalize indent"><span class="hidden-xs">Delete User: </span>{{username}}</h1>
  <div class="form-group">
    <label class="col-sm-2 control-label">First Name</label>

    <div class="col-sm-10">
      <input class="form-control" type="text" id="user-firstname" value="{{firstName}}" readonly/>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Last Name</label>

    <div class="col-sm-10">
      <input class="form-control" type="text"  id="user-firstname" value="{{lastName}}" readonly/>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Phone Number</label>

    <div class="col-sm-10">
      <input class="form-control" type="text"  id="user-phonenumber" value="{{phoneNumber}}" readonly/>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Email</label>

    <div class="col-sm-10">
      <input class="form-control" type="text" id="user-email" value="{{email}}" readonly/>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Roles</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" id="user-roles" value="{{roles}}" readonly/>
    </div>
  </div>

  <div class="col-sm-2"></div>
  <div class="form-group col-sm-10" style="margin-left:-10px;">
      <input class="btn btn-primary" type="submit" id="user-delete" value="Delete" style="margin-bottom: 5px;" />
    <a class="btn btn-default" href="/admin/users">Cancel</a>
  </div>
</form>
  </div>