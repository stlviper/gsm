<div id="main-content" class="container maincontent-container">
  <div class="col-sm-12">
    <div class="page-nav"></div>
    <div class="clearfix"></div>
    {{#if members}}
      <div class="container">
        <div id="members-list" class="row">
          <div class="col-sm-12 col-md-3 col-lg-3 sidebar">
            <div id="sidebar" class="organizations-list detail_page" data-spy="affix" data-offset-top="0">
              <div class="form-group has-feedback">
                <label>Search Members</label>
                <input type="text" class="form-control search" placeholder="Search" value=""/>
                <i class="glyphicon glyphicon-search form-control-feedback"></i>
              </div>

              <label style="margin-bottom: -10px;">Sort:</label>

              <div class="radio">
                <label><input class="sort" type="radio" name="sort-controls" data-sort="orgName">By Name
                </label>
              </div>
              <div class="radio">
                <label><input class="sort" type="radio" name="sort-controls" data-sort="marketArea">By Market
                  Area</label>
              </div>
              <br class="visible-xs"/>
              <label style="margin-bottom: -10px;">Organization Type:</label>
              <br class="visible-xs"/>
              <div class="checkbox">
                <label><input class="members-filter" type="checkbox"
                              value="industry">Industry
                </label>
              </div>
              <div class="checkbox">
                <label><input class="members-filter" type="checkbox"
                              value="government">Government
                </label>
              </div>
              <div class="checkbox">
                <label><input class="members-filter" type="checkbox"
                              value="academia">Academia
                </label>
              </div>
              <br class="visible-xs"/>
              <label style="margin-bottom: -10px;">Organization Role:</label>
              <br class="visible-xs"/>
              {{#each memberRoles}}
                {{#notEqualsTo this 'both'}}
                  <div class="checkbox">
                    <label><input class="members-filter" type="checkbox"
                                  value="{{getOrganizationRoleFriendly this}}">{{getOrganizationRoleFriendly this}}
                    </label>
                  </div>
                {{/notEqualsTo}}
              {{/each}}
            </div>
          </div>
          <div class="col-sm-12 col-md-9 col-lg-9">
            {{#equalsTo memebers.length 0}}
              <span class="alert alert-info">{{strings.Community.Messages.NoMembersAlert}}</span>
            {{/equalsTo}}
            <h1>{{{strings.Organizations.Title}}}</h1>
            <br/>
            <ul class="list">
              {{#each newOrgs}}
                <li>

                  <div class="border-bottom">
                    <a
                      href="/members/{{urlFriendlyID}}">
                      <div class="pull-left thumb hidden-xs"><img
                        src="{{#if logoUrl}}{{logoUrl}}{{else}}{{strings.PublicStaticContentDirectoryFullPrefixPath}}/images/logo-default.png{{/if}}"
                        class="img-responsive logo"
                        alt="{{orgName}}"/>
                      </div>
                <span class="orgRole" style="display: none;">
                  {{#notEqualsTo orgRole 'both'}}
                    {{getOrganizationRoleFriendly orgRole}}
                  {{else}}
                    {{getOrganizationRoleFriendly 'provider'}},{{getOrganizationRoleFriendly 'client'}}
                  {{/notEqualsTo}}
                </span>

                      <div class="pull-right">
                        <span class="label gsm-teal-bg">NEW</span>
                        {{#notEqualsTo orgRole 'both'}}
                          {{#equalsTo orgRole 'client'}}
                            <span class="badge jivango-explorer-bkgd hidden">{{getOrganizationRoleFriendly orgRole}}</span>
                          {{/equalsTo}}
                          {{#equalsTo orgRole 'provider'}}
                            <span class="badge jivango-provider-bkgd hidden">{{getOrganizationRoleFriendly orgRole}}</span>
                          {{/equalsTo}}
                          {{#equalsTo orgRole 'communityowner'}}
                            <span class="badge jivango-owner-bkgd hidden">{{getOrganizationRoleFriendly orgRole}}</span>
                          {{/equalsTo}}
                        {{else}}
                          <span class="badge jivango-explorer-bkgd hidden">{{getOrganizationRoleFriendly 'client'}}</span>
                          <span class="badge jivango-provider-bkgd hidden">{{getOrganizationRoleFriendly 'provider'}}</span>
                        {{/notEqualsTo}}
                      </div>
                      <div class="members-list">
                        <span style="display:none;" class="orgType">{{orgType}}</span>
                        <h2 class="orgName">{{orgName}}</h2>

                        <h3 class="tagline">{{tagline}}</h3>

                        {{#if marketArea}}
                          <p><label>Market Area:</label> <span class="marketArea">{{marketArea}}</span></p>
                        {{/if}}
                        <h4 class="baseline-shift more-link">
                          <a href="/members/{{urlFriendlyID}}"
                             class="more-link jivango-mdgray">
                        <span class="fa-stack">
                          <i class="fa fa-circle fa-stack-2x"></i>
                          <i class="glyphicon glyphicon-option-horizontal fa-stack-1x fa-inverse"
                             aria-hidden="true"></i>
                        </span>
                            More
                          </a>
                        </h4>
                      </div>
                    </a>
                  </div>
                </li>
              {{/each}}
              {{#each members}}
                <li>

                  <div class="border-bottom">
                    <a
                      href="/members/{{urlFriendlyID}}">
                      <div class="pull-left thumb hidden-xs"><img
                        src="{{#if logoUrl}}{{logoUrl}}{{else}}{{strings.PublicStaticContentDirectoryFullPrefixPath}}/images/logo-default.png{{/if}}"
                        class="img-responsive logo"
                        alt="{{orgName}}"/>
                      </div>
                <span class="orgRole" style="display: none;">
                  {{#notEqualsTo orgRole 'both'}}
                    {{getOrganizationRoleFriendly orgRole}}
                  {{else}}
                    {{getOrganizationRoleFriendly 'provider'}},{{getOrganizationRoleFriendly 'client'}}
                  {{/notEqualsTo}}
                </span>

                      <div class="pull-right">
                        {{#notEqualsTo orgRole 'both'}}
                          {{#equalsTo orgRole 'client'}}
                            <span class="badge jivango-explorer-bkgd hidden">{{getOrganizationRoleFriendly orgRole}}</span>
                          {{/equalsTo}}
                          {{#equalsTo orgRole 'provider'}}
                            <span class="badge jivango-provider-bkgd hidden">{{getOrganizationRoleFriendly orgRole}}</span>
                          {{/equalsTo}}
                          {{#equalsTo orgRole 'communityowner'}}
                            <span class="badge jivango-owner-bkgd hidden">{{getOrganizationRoleFriendly orgRole}}</span>
                          {{/equalsTo}}
                        {{else}}
                          <span class="badge jivango-explorer-bkgd hidden">{{getOrganizationRoleFriendly 'client'}}</span>
                          <span class="badge jivango-provider-bkgd hidden">{{getOrganizationRoleFriendly 'provider'}}</span>
                        {{/notEqualsTo}}
                      </div>
                      <div class="members-list">
                        <span style="display:none;" class="orgType">{{orgType}}</span>
                        <h2 class="orgName">{{orgName}}</h2>

                        <h3 class="tagline">{{tagline}}</h3>

                        {{#if marketArea}}
                          <p><label>Market Area:</label> <span class="marketArea">{{marketArea}}</span></p>
                        {{/if}}
                        <h4 class="baseline-shift more-link">
                          <a href="/members/{{urlFriendlyID}}"
                             class="more-link jivango-mdgray">
                        <span class="fa-stack">
                          <i class="fa fa-circle fa-stack-2x"></i>
                          <i class="glyphicon glyphicon-option-horizontal fa-stack-1x fa-inverse"
                             aria-hidden="true"></i>
                        </span>
                            More
                          </a>
                        </h4>
                      </div>
                    </a>
                  </div>
                </li>
              {{/each}}
            </ul>


            <div class="jiv-pagination-controls">
              <ul class="members-pagination pagination pagination-sm"></ul>
              <ul class="pagination pagination-sm">
                <li><a id="members-showall" href="#" data-showall="false">Show All</a></li>
              </ul>
              <select class="form-control" name="type" id="members-itemsperpage">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="20">20</option>
              </select>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container -->
    {{else}}
      <div class="alert alert-info">
        {{{strings.Organizations.NoOrganizations}}}
      </div>
    {{/if}}
    <div class="page-nav"></div>
  </div>
</div>


{{#contentFor 'pageCSS'}}
  <style>
    ul.list {
      list-style-type: none;
    }
  </style>
{{/contentFor}}
{{#contentFor 'pageScripts'}}
  <script type="application/javascript"
          src="{{strings.PublicStaticContentDirectoryFullPrefixPath}}/js/libs/jquery.matchHeight-min.js"></script>
  <script type="application/javascript"
          src="{{strings.PublicStaticContentDirectoryFullPrefixPath}}/js/libs/list-v1.1.1.js"></script>
  <script type="application/javascript"
          src="{{strings.PublicStaticContentDirectoryFullPrefixPath}}/js/libs/list.pagination-v0.1.1.js"></script>
  <script type="application/javascript"
          src="{{strings.PublicStaticContentDirectoryFullPrefixPath}}/js/community-members-list.js"></script>
{{/contentFor}}