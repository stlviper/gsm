<div id="main-content" class="container maincontent-container">

<div class="container">
     <div id="output" class="aui-avatar aui-avatar-standard pull-left" style="margin: 0 10px 10px 0;">
         <div class="aui-avatar-inner thumb" style="height: 100px;width: 100px;">
              <img src="{{logoUrl}}"/>
         </div>
     </div>
     <h4 style="font-size:18px;margin:0 0 .5em 0;">Delete Capability:</h4>
     <h1 style="font-size:36px;margin:0 0 .5em 0;">{{product.name}}</h1>
</div>
    
    <div class="form-horizontal">

        <div class="form-group">
          <label class="col-sm-2 control-label">Name</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" name="capabilityName" id="name" value="{{product.name}}" disabled/>
          </div>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">POC Name</label>
            <div class="col-sm-10">
              <input class="form-control" type="text" name="pocName" id="pocName" value="{{product.pocName}}" disabled/>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">POC Email</label>
            <div class="col-sm-10">
              <input class="form-control" type="text" name="pocEmail" id="pocEmail" value="{{product.pocEmail}}" disabled/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Category Tags</label>
            <div class="col-sm-10">
              <input class="form-control" type="text" name="category" id="category" value="{{product.category}}" disabled/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Logo</label>
            <div class="news-image col-sm-10" style="margin-top:0;">
                <img src="{{product.logoUrl}}" class="img-responsive logo" alt="{{product.name}}" style="max-height: 200px;">
            </div>
        </div> 

        <div class="form-group">
            <label class="col-sm-2 control-label">Website</label>
            <div class="col-sm-10">
              <input class="form-control" type="text" name="webLink" id="webLink" value="{{product.webLink}}" disabled/>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="capabilityDescription">Description</label>
            <div class="col-sm-10">
              <textarea rows="4" class="form-control" id="capabilityDescription" name="capabilityDescription" value="" disabled>
                {{product.description}}
              </textarea>
            </div>
        </div>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Date Created</label>
          <div class="col-sm-4">
            <span class="form-control" disabled>{{dateFormatter product.date_created "short"}}</span>
          </div>
        </div>
        
    </div>
    <form method="POST" action="/admin/capabilities/{{product._id}}/delete">

<div class="container">
    <h1 class="icon"><span class="icon-warning-o"></span></h1>
    <p class="text-center">Are you sure you want to remove <strong>{{product.name}}</strong>?</p>
</div>
        
      <div class="text-center" style="margin-left:20px;">
        <input type=submit class="btn btn-primary" value="Delete" />
        <a href="/admin/capabilities" class="btn btn-default" style="margin-top:5px;"><span class="glyphicon glyphicon-arrow-left"></span> Back to Capabilities List</a>
      </div>
        
   </form>

</div>

{{#contentFor "pageCSS"}}
  <link rel="stylesheet" type="text/css" href="{{strings.PublicStaticContentDirectoryFullPrefixPath}}/js/libs/tokenfield/css/bootstrap-tokenfield.css"/>
{{/contentFor}}
{{#contentFor "pageScripts"}}
  <script type="application/javascript" src="{{strings.PublicStaticContentDirectoryFullPrefixPath}}/js/libs/tokenfield/bootstrap-tokenfield.js"></script>

  <script type="application/javascript">

    $(window).load(function () {
      $('#category').tokenfield({
        autocomplete: {
          source: [
            '{{strings.Capabilities.Filters.Analytics}}',
            '{{strings.Capabilities.Filters.Collaboration}}',
            '{{strings.Capabilities.Filters.CyberSecurity}}',
            '{{strings.Capabilities.Filters.GIS}}',
            '{{strings.Capabilities.Filters.Imaging}}',
            '{{strings.Capabilities.Filters.Infrastructure}}',
            '{{strings.Capabilities.Filters.Modeling}}',
            '{{strings.Capabilities.Filters.RemoteSensing}}',
            '{{strings.Capabilities.Filters.Search}}',
            '{{strings.Capabilities.Filters.Visualization}}'
          ],
          delay: 100
        },
        showAutocompleteOnFocus: true
      });
    });
  </script>

{{/contentFor}}