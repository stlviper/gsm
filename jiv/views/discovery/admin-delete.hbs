<div id="main-content" class="container maincontent-container">
  <h4>{{discovery.name}} (Delete)</h4>

  <div class="form-horizontal form-padding">
    {{#with discovery}}
      <div class="form-group">
        <label class="col-sm-2">Name</label>

        <div class="col-sm-10">
          <input class="form-control" type="text" name="name" id="name" value="{{name}}" disabled/>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2">POC Name</label>

        <div class="col-sm-10">
          <input class="form-control" type="text" name="pocName" id="pocName" value="{{pocName}}" disabled/>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2">POC Email</label>

        <div class="col-sm-10">
          <input class="form-control" type="text" name="pocEmail" id="pocEmail" value="{{pocEmail}}" disabled/>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2">Number of Days</label>

        <div class="col-sm-10">
          <input class="form-control" type="text" name="days" id="days" value="{{dayCount}}" disabled/>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2">Description</label>

        <div class="col-sm-10">
          <div class="form-control form-control-contains-html" id="description" name="description"
               disabled>{{{trim description}}}</div>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2">Requirements</label>

        <div class="col-sm-10">
        <textarea rows="4" class="form-control" id="requirements" name="requirements"
                  value="{{trim requirementDescription}}"
                  disabled>{{trim requirementDescription}}</textarea>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2" for="showcaseImage">Additional Files</label>

        <div class="col-sm-10">
          <input type="file" class="form-control" name="documents" id="documents" disabled/>
        </div>
      </div>
    {{/with}}

    <form method="POST" action="/admin/problems/{{discovery.id}}/delete">
      <button class="btn btn-danger" id="submitChallengeBtn" type="submit">
        Delete
      </button>
      <a class="btn btn-primary" href="/admin/problems/">Cancel</a>
    </form>
  </div>
</div>
