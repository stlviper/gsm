<div id="formPage3" class="formPage signup">
<h1>Point of Contacts</h1>
<div id="formContainer">
    <div class="form-group">
        <h3>Business Point of Contact</h3>
    </div>

    <div class="form-group">
        <input type="text" name="businessPocFirstName" id="businessPocFirstName" class="big-orange-field" placeholder="First Name"><br><br>
        <input type="text" name="businessPocLastName" id="businessPocLastName" class="big-orange-field" placeholder="Last Name"><br><br>
        <input type="text" name="businessPocEmail" id="businessPocEmail" class="big-orange-field" placeholder="Email"><br><br>
        <input type="text" name="businessPocPhone" id="businessPocPhone" class="big-orange-field" placeholder="Phone Number"><br>
    </div>

    <br>
    <div class="form-group">
        <h3>Technical Point of Contact</h3>
    </div>
    <div class="form-group">
        <input type="text" name="technicalPocFirstName" id="technicalPocFirstName" class="big-orange-field" placeholder="First Name"><br><br>
        <input type="text" name="technicalPocLastName" id="technicalPocLastName" class="big-orange-field" placeholder="Last Name"><br><br>
        <input type="text" name="technicalPocEmail" id="technicalPocEmail" class="big-orange-field" placeholder="Email"><br><br>
        <input type="text" name="technicalPocPhone" id="technicalPocPhone" class="big-orange-field" placeholder="Phone Number"><br>
    </div>
	{{> message}}
    <div class="form-group">
        <input type="button" class="big-orange-btn" value="NEXT">
    </div>
</div>
