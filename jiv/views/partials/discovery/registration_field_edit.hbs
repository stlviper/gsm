<div class="form-horizontal form-padding indent indent-30">
  <form id="registrationDescriptionForm"
        action="/problems/{{discovery.id}}/updateregistrationdescription" method="post"
        enctype="multipart/form-data">

      <div class="row" style="margin-bottom:10px;">
        <h1><i class="fa fa-check-square-o fa-fw jivango-dkgray"></i> Optional Fields</h1> 
      </div>
      <div class="form-group">
          <label class="col-sm-2 control-label">Solution Submission Header<br><span class="muted small" style="font-weight: normal">This optional field is available to provide a description area that will appear at the top of the Solution submission form to provide additional information.</span></label>
          <div class="col-sm-10">
              <textarea rows="3" class="form-control ckeditor" id="registrationDescription" name="registrationDescription">{{{trim discovery.registrationDescription}}}</textarea>
          </div>
      </div>
      <div class="form-group">
          <label class="control-label col-sm-2">Allow Attachments</label>
          <div class="col-sm-10">
              <input type="checkbox" name="addWhitepaper" id="addWhitepaper" data-on-color="success" data-on-text="Yes" data-off-text="No"
              {{#if discovery.addWhitepaper}}checked{{/if}}/>
              &nbsp;&nbsp;Allow providers to upload attachments to their Solution submissions.
          </div>
      </div>
      <div class="form-group">
          <label class="control-label col-sm-2">Include Capabilities</label>
          <div class="col-sm-10">
              <input type="checkbox" name="addProduct" id="addProduct" data-on-color="success" data-on-text="Yes" data-off-text="No"
               {{#if discovery.addProduct}}checked{{/if}}/>
              &nbsp;&nbsp;Allow providers to select from a list of their Capabilities to add to their Solution submissions.
          </div>
      </div>

    <br />

      <div class="col-sm-10 col-sm-offset-2">
          <input type="submit" class="btn btn-primary" value="Update Optional Fields" style="margin-left:-10px;"/>
      </div>
      
    <span id="regHdrMsg" class="alert alert-warning" style="display: none;"></span>
  </form>
    <br />
    <br />
    <hr />
    <div class="row">
        <h1><i class="fa fa-pencil fa-fw jivango-dkgray"></i> Custom Fields</h1>
        <p class="small muted">Click to add custom fields to your Solution submission form.</p>
    </div>

  <div id='regristration-custom-fields'></div>
</div>

{{#contentFor "pageCSS"}}
<link rel="stylesheet" type="text/css" href="{{strings.PublicStaticContentDirectoryFullPrefixPath}}/js/libs/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.css" rel="stylesheet">
{{/contentFor}}

{{#contentFor "postJqueryScripts"}}
<script src="{{strings.PublicStaticContentDirectoryFullPrefixPath}}/js/libs/bootstrap-switch/dist/js/bootstrap-switch.js"></script>
<script>
    $("[name='addWhitepaper']").bootstrapSwitch();
    $("[name='addProduct']").bootstrapSwitch();
</script>
{{/contentFor}}