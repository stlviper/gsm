{{>message}}
{{#with log}}
  <form method="post" action="/admin/logs/{{_id}}/delete" class="form-horizontal" style="padding-top: 50px;">
    <div class="form-group">
      <label class="col-sm-2 control-label">ID</label>

      <div class="col-sm-10">
        <input type="text" class="form-control" value="{{_id}}" disabled>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Level</label>

      <div class="col-sm-10">
        <input type="text" class="form-control" value="{{level}}" disabled>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Time Stamp</label>

      <div class="col-sm-10">
        <input type="text" class="form-control" value="{{dateFormatter timestamp 'short'}}" disabled>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Message</label>

      <div class="col-sm-10" >
        <pre>{{message}}</pre>
      </div>
    </div>
    <input type="submit" value="Delete" />
    <a href="/admin/logs" class="btn btn-primary long-btn">Back To List</a>
  </form>
{{/with}}
