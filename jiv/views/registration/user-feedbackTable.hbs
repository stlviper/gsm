<div id="main-content" class="container maincontent-container">
  {{#with registration}}
    {{#isAnyFeedbackComplete feedback}}
      <div class="row">
        <br>

        <div class="col-sm-10">
          <h2>Explorer Feedback</h2>
        </div>
        <div class="col-sm-2">

          {{#isClient ../../../userinfo.orgRole}}
            {{#equalsTo ../../../../userinfo.orgRef ../../../../challenge.orgRef}}
              <a href="/profile/{{../../../../../userinfo.username}}/manage/solutions/{{id}}/leavefeedback"
                 class="btn btn-success" style="margin-top: 20px; margin-bottom: 10px;"><i class="fa fa-comments"></i>
                Leave Feedback</a>
            {{/equalsTo}}
          {{/isClient}}
        </div>
        <div class="col-sm-12">
          <table class="table table-bordered table-striped">
            <thead>
            <tr>
              <td>Create Date</td>
              <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            {{#each feedback}}
              {{#unless this.isDraft}}
                <tr>
                  <td> {{dateFormatter date_created 'short'}}</td>

                  <td><a
                    href="/profile/{{../../../../userinfo.username}}/manage/solutions/{{../../id}}/feedback/{{id}}/{{../../../../feedbackRole}}"
                    class="btn btn-info"><span class="glyphicon glyphicon-eye-open"></span> Read</a></td>
                </tr>
              {{/unless}}
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    {{else}}
      <br>

      <div class="col-sm-10">
        <h3>No feedback has been submitted yet. You will see it displayed here when it is officially submitted back to
          you.</h3>
      </div>
    {{/isAnyFeedbackComplete}}
  {{/with}}
  <div class="col-sm-10">
    <a class="btn btn-info"
       href="{{#equalsTo feedbackRole 'provider'}}/profile/{{userinfo.username}}/manage#solutionSubmissions{{else}}/profile/{{userinfo.username}}/manage/problems/{{challenge._id}}/view{{/equalsTo}}"
       style="margin-left:-10px;">
      <span class="glyphicon glyphicon-arrow-left"></span> Return to Solution Submissions
    </a>
  </div>
</div>